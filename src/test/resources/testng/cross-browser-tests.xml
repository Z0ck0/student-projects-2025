<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross-Browser Test Suite" >

    <test name="TestOnChrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.testautomation.tests.examples.ExampleButtons"/>
            <class name="com.testautomation.tests.examples.ExampleTest"/>
        </classes>
    </test>


    <test name="TestOnFirefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.testautomation.tests.examples.ExampleButtons"/>
            <class name="com.testautomation.tests.examples.ExampleTest"/>
        </classes>
    </test>


    <test name="TestOnEdge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.testautomation.tests.examples.ExampleButtons"/>
            <class name="com.testautomation.tests.examples.ExampleTest"/>
        </classes>
    </test>


</suite>
