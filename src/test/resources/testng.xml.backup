<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Automation Framework Suite" parallel="classes" thread-count="4">
    
    <test name="Example Tests">
        <classes>
            <class name="com.testautomation.tests.examples.ExampleTest"/>
        </classes>
    </test>

    <!-- Add your test classes here -->
    <!--
    <test name="Your Tests">
        <classes>
            <class name="com.testautomation.tests.YourTestClass"/>
        </classes>
    </test>
    -->

    <!-- Parameter definitions -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="production"/>
    <parameter name="parallel" value="true"/>
    
    <!-- Listener for Allure reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

</suite>
